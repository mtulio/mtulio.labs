# Build opct-runner

# https://github.com/mtulio/ansible-collection-okd-installer/actions/runs/3809864467
FROM quay.io/mrbraga/okd-installer:0.0.0-ci.169-3809864467

COPY --from=quay.io/ocp-cert/tools:latest /usr/bin/oc /usr/bin/

WORKDIR /opct-runner

ADD ./hack/opct-runner/ansible.cfg ./
ADD ./inventories/* ./inventories/
ADD ./opct-*.yaml .
